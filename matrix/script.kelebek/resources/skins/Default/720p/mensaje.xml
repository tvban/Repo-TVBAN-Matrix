<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
    <animation type="WindowOpen">
        <effect type="fade" start="0" end="100" time="300" tween="cubic"/>
    </animation>
    <coordinates>
        <left>100</left>
        <top>50</top>
    </coordinates>
    <controls>
        <control type="image">
            <left>-200</left>
            <top>-200</top>
            <width>200%</width>
            <height>200%</height>
            <texture>fondo_negro.png</texture>
            <animation type="WindowOpen">
                <effect type="fade" start="0" end="1000" time="2000" tween="cubic"/>
            </animation>
            <animation type="WindowClose">
                <effect type="fade" start="100" end="0" time="200" tween="cubic" ease="out"/>
            </animation>
        </control>
        <control type="group">
            <animation type="WindowOpen">
                <effect type="zoom" start="80" end="100" time="2000" tween="back" center="auto"/>
            </animation>
            <control type="image" id="3071">
                <texture>fondodialogo.png</texture>
            </control>

            <control type="image" id="3078">
                <aspectratio>scale</aspectratio>
            </control>
            <control type="image" id="3074">
                <left>400</left>
                <top>25</top>
                <width>180</width>
                <height>180</height>
                <aspectratio>keep</aspectratio>
            </control>
			
            <control type="image" id="3072">
                <top>0</top>
                <texture>cabecera.png</texture>
            </control>
            <control type="label" id="3073">
                <top>8</top>
                <height>34</height>
                <width>995</width>
                <textcolor>white</textcolor>
                <font>font25_title</font>
                <shadowcolor>FF504416</shadowcolor>
                <visible>true</visible>
                <align>center</align>
                <info>Window.Property("title")</info>
            </control>
			
			
            <control type="button" id="3075">
                <top>5</top>
                <left>950</left>
                <width>32</width>
                <height>34</height>
                <texturefocus>Controls/DialogCloseButton-focus.png</texturefocus>
                <texturenofocus>Controls/logo.png</texturenofocus>
            </control>
            <control type="image" id="3076">
                <left>220</left>
                <top>220</top>
                <width>760</width>
                <height>300</height>
                <texture>Windows/BackControls.png</texture>
            </control>
            <control type="textbox" id="3077">
                <font>Mono26</font>
                <textcolor>FFFFFFFF</textcolor>
                <shadowcolor>FF504416</shadowcolor>
                <info>Window.Property(textomensaje)</info>
                <align>center</align>
            </control>
            <animation type="WindowClose">
                <effect type="zoom" start="100" end="90" time="200" tween="back" ease="in" center="auto"/>
            </animation>
        </control>
    </controls>
    <animation type="WindowClose">
        <effect type="fade" start="100" end="0" time="200" tween="linear" ease="in"/>
    </animation>
</window>